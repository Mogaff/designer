# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
PGHOST=localhost
PGPORT=5432
PGDATABASE=database_name
PGUSER=username
PGPASSWORD=password

# Firebase Configuration (Required for Authentication)
# Get these from Firebase Console > Project Settings > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# AI Service API Keys (Required for Design Generation)
# OpenAI - Get from https://platform.openai.com/
OPENAI_API_KEY=sk-your_openai_api_key_here

# Claude/Anthropic - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_claude_api_key_here

# Google Gemini - Get from https://makersuite.google.com/
GEMINI_API_KEY=AIza-your_gemini_api_key_here

# Fal AI (Image Generation) - Get from https://fal.ai/
FAL_KEY=your_fal_ai_api_key_here

# ElevenLabs (Audio - Optional) - Get from https://elevenlabs.io/
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key_here

# Kling (Video Generation - Optional) - Get from https://klingai.com/
KLING_API_KEY=your_kling_api_key_here

# Stripe (Payment Processing - Optional)
# Get from https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Google Ads API (Optional - for competitor analysis)
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_google_ads_refresh_token
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token

# Session Configuration
SESSION_SECRET=your_random_session_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development